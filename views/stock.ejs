<%- include("header") -%>
<body>
  <!-- Navigation -->
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
    <div class="container">
      <a class="navbar-brand" href="#">Wall Street Simulator</a>
      <button
        class="navbar-toggler"
        type="button"
        data-toggle="collapse"
        data-target="#navbarResponsive"
        aria-controls="navbarResponsive"
        aria-expanded="false"
        aria-label="Toggle navigation"
      >
        <span class="navbar-toggler-icon"></span>
      </button>
      <div
        class="collapse navbar-collapse container-fluid"
        id="navbarResponsive"
      >
        <ul class="navbar-nav ml-auto">
          <li class="nav-item active">
            <a class="nav-link" href="#">Watchlist </a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="#">Portfolio</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="#">Trade Market</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="#">Login</a>
          </li>
        </ul>
      </div>

      <div class="container-fluid">
        <form class="form" style="float: left">
          <table>
            <tr>
              <th>
                <input
                  class="form-control mr-sm-2"
                  type="search"
                  placeholder="Stock Symbol"
                  aria-label="Search"
                />
              </th>
              <th>
                <button
                  class="btn btn-outline-success my-2 my-sm-0"
                  type="submit"
                >
                  Search
                </button>
              </th>
            </tr>
          </table>
        </form>
      </div>
    </div>
  </nav>

  <!-- Page Content -->
  <div class="container bg-light">
    <div class="row">
      <div class="col"><p class="font-weight-bold">Stock Symbol</p></div>
      <div class="col"><p class="font-weight-bold">Change</p></div>
      <div class="col"><p class="font-weight-bold">Current</p></div>
      <div class="col"><p class="font-weight-bold">52w Range</p></div>
    </div>

    <% watchListStocks.forEach(function(item){ %>
    <hr />
    <div class="row clickable-row">
      <div class="col">
        <div class="row">
          <!--<p class="fw-bold" onclick="openInNewTab('www.etoro.com/markets/'+item.symbol);"><%=item.symbol%></p> -->
          
          <p class="fw-bold link">Link</a>
          <script  type="text/javascript">
               $("p.link").on("click",function(){
                   window.open('www.etoro.com/markets/','_blank');
                   console.log("clicked.");
               });
          </script>
        
        </div>
        <div class="row"><p class="fw-lighter"><%=item.longName%></p></div>
      </div>

      <div class="col">
        <div class="row">
          <%if(item.absChange<=0) { %>
          <p class="fw-normal" style="color: rgb(245, 66, 66)"><%=item.absChange%></p>
          <%} else {%>
          <p class="fw-normal" style="color: rgb(0, 153, 51);"><%=item.absChange%></p>
          <%}%>
        </div>
        <div class="row"><p class="fw-light"><%=item.rateChange%></p></div>
      </div>

      <div class="col">
        <div class="row">
          <p class="fw-normal"><%=item.currentPrice%></p>
        </div>
      </div>

      <div class="col">
        <div class="row">
          <p class="fw-normal"><%=item.rangeLow%></p>
        </div>
        <div class="row"><p class="fw-normal"><%=item.rangeHigh%></p></div>
      </div>
    </div>
    <%}) %> 
  </div>
  
  <%- include("footer") -%>
</body>
